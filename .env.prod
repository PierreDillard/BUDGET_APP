# Budget App - Production Environment Configuration

# =================================
# APPLICATION SETTINGS
# =================================
NODE_ENV=production
APP_PORT=3001
LOG_LEVEL=info

# =================================
# DATABASE CONFIGURATION
# =================================
POSTGRES_DB=budget_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=BudgetApp2024!SecurePass
DATABASE_URL=postgresql://postgres:BudgetApp2024!SecurePass@postgres:5432/budget_app

# =================================
# JWT & SECURITY
# =================================
JWT_SECRET=super_secure_jwt_secret_key_for_budget_app_production_2024_with_64_chars
JWT_EXPIRES_IN=7d

# =================================
# CORS & API
# =================================
CORS_ORIGIN=*

# =================================
# DEPLOYMENT OPTIONS
# =================================
SEED_DATABASE=false

# =================================
# MONITORING & LOGGING
# =================================
LOG_RETENTION_DAYS=30

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
